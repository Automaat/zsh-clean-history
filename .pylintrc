[MAIN]
py-version=3.8

[MESSAGES CONTROL]
disable=
    missing-module-docstring,
    missing-function-docstring,
    missing-class-docstring,
    too-few-public-methods,
    invalid-name,
    too-many-locals,
    too-many-branches,
    too-many-statements,
    too-many-nested-blocks

[FORMAT]
max-line-length=100

[BASIC]
good-names=i,j,k,f,_,a,b,sim,idx
